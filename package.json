{
  "name": "chainoverflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/langell/chainOverflow.git"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "npm --prefix server run dev",
    "dev:node": "hardhat node",
    "dev:all": "npx concurrently -k -p \"[{name}]\" -n \"chain,server,web\" -c \"magenta,cyan,green\" \"npm run dev:node\" \"npm run dev:server\" \"npm run dev\"",
    "db:seed": "npm --prefix server run seed",
    "setup": "npm install && npm --prefix server install",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.cjs --network localhost",
    "deploy:base-sepolia": "hardhat run scripts/deploy.cjs --network base-sepolia",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:server": "npm --prefix server run test",
    "test:all": "npm run test && npm run test:server",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "hardhat": "^2.28.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  },
  "dependencies": {
    "ethers": "^6.16.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.11.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md}": [
      "prettier --write"
    ]
  }
}